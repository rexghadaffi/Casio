@{
    ViewBag.Title = "Dashboard";
}
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading clearfix">
                Student Records
            </div>
            <!-- Panel Content Goes Here..-->
            <div class="panel-body">
                <div id="donut-hey" style="height: 250px;"></div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading clearfix">
                Department Head Accounts
            </div>
            <!-- Panel Content Goes Here..-->
            <div class="panel-body">
                <div id="donut-how" style="height: 250px;"></div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading clearfix">
                Admin Accounts
            </div>
            <!-- Panel Content Goes Here..-->
            <div class="panel-body">
                <div id="donut-hui" style="height: 250px;"></div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading clearfix">
                Students Enrolled (S.Y)
            </div>
            <!-- Panel Content Goes Here..-->
            <div class="panel-body">
                <div id="myfirstchart" style="height: 250px;"></div>
            </div>
        </div>
    </div>


</div>
