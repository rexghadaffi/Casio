@model IEnumerable<Model.Student>

@{
    ViewBag.Title = "Index";
}
<legend>
    Student Record List  
</legend>
@* Modal Goes Here..*@
@{ Html.RenderPartial("~/Views/Shared/_UploadStudent.cshtml"); }
@* Table Goes Here..*@
@{ Html.RenderPartial("~/Views/Shared/_StudentsTable.cshtml"); }

@section Scripts {
    <script src="~/Scripts/table-events.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {
        $('#tblstudent').bootstrapTable({
            url: '/Student/Data',
            pagination: true,
            classes: 'table table-hover table-condensed',
            sidePagination: 'server',
            queryParamsType: 'Else',
            uniqueId: 'ID',
            toolbarAlign: 'right',
            toolbar: '#studentToolbar',
            pageList: [10, 20, 50, 100],
            onDblClickRow: function (row, $element) {
                var key = row["ID"];
                window.location.href = "/student/edit/" + key;
            }
        });
    });
</script>
}
